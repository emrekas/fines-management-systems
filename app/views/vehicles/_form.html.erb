<!-- app/views/vehicles/new.html.erb -->
<div class="col-md-12 col-lg-12">
  <%= form_with(model: @vehicle, class: 'needs-validation', novalidate: true) do |form| %>
    <div class="row g-3">
      <div class="col-sm-6">
        <%= form.label :plate_number, class: 'form-label' %>
        <%= form.text_field :plate_number, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Valid plate number is required.
        </div>
      </div>

      <div class="col-sm-6">
        <%= form.label :vehicle_type, class: 'form-label' %>
        <%= form.text_field :vehicle_type, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Valid vehicle type is required.
        </div>
      </div>

      <div class="col-12">
        <%= form.label :make, class: 'form-label' %>
        <%= form.text_field :make, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Valid make is required.
        </div>
      </div>

      <div class="col-12">
        <%= form.label :year_of_production, class: 'form-label' %>
        <%= form.number_field :year_of_production, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Valid year of production is required.
        </div>
      </div>

      <div class="col-12">
        <%= form.label :user_id, class: 'form-label' %>
        <%= form.collection_select :user_id, User.all, :id, :email, { include_blank: 'Select User' }, class: 'form-select', required: true %>
        <div class="invalid-feedback">
          Please select a valid user.
        </div>
      </div>
    </div>

    <hr class="my-4">

    <%= form.submit 'Submit', class: 'w-100 btn btn-primary btn-lg' %>

    <%= link_to 'Back to Vehicles', vehicles_path, class: 'btn btn-secondary m-2' %>
  <% end %>
</div>
